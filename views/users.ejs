<div class="container my-5 student-table">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <a class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#add_new" data- href="/add">Add New Students</a>
            <br>
            <br>
            <div class="card shadow">
                <div class="card-body">
                    <h2> All Students </h2>
                    
                    <table class="table table-striped ash-data-table my-3">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>E-mail</th>
                                <th>Age</th>
                                <th>Phone</th>
                                <th>Location</th>
                                <th>Gender</th>
                                <th>Photo</th>
                                <th>Action</th>
                            </tr>
                            <tbody>
                                <% user_data?.forEach((item,index) => { %>
                                    <tr class="align-middle">
                                        
                                        <td><%= index + 1 %></td>
                                        <td><%= item.name %></td>
                                        <td><%= item.email %> </td>
                                        <td><%= item.age %></td>
                                        <td><%= item.phone %></td>
                                        <td><%= item.location %></td>
                                        <td><%= item.gender %></td>
                                        <td>
                                            <% if (item.image == '') { %>
                                                <img style="width: 50px;height:50px" src="/images/avatar" alt="">
                                                <% } else { %>
                                                    <img style="width: 50px;height:50px" src="/images/<%= item.image %>" alt="">
                                            <% } %>
                                        </td>
                                        <td>
                                            <a class="btn btn-sm btn-info" href="/view/<%= item.id %>"><i class="fas fa-eye"></i></a>
                                            <a class="btn btn-sm btn-warning" href="/edit/<%= item.id %>"><i class="fas fa-edit"></i></a>
                                            <a class="btn btn-sm btn-danger delete-btn" href="/delete/<%= item.id %>"><i class="fas fa-trash"></i></a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal" id="add_new">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Add New User Data</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <form action="/" method="post" enctype="multipart/form-data">
                <div class="my-3">
                    <label for="">Name</label>
                    <input name="name" type="text" class="form-control">
                </div>
                <div class="my-3">
                    <label for="">Email</label>
                    <input name="email" type="text" class="form-control">
                </div>
                <div class="my-3">
                    <label for="">Age</label>
                    <input name="age" type="number" class="form-control">
                </div>
                <div class="my-3">
                    <label for="">Phone</label>
                    <input name="phone" type="text" class="form-control">
                </div>
                <div class="my-3">
                    <label for="">Location</label>
                    <input name="location" type="text" class="form-control">
                </div>
                <div class="my-3">
                    <label for="Gender">Gender</label>
                    <select class="form-control" name="gender" id="Gender">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                    </select>
                </div>
                <div class="my-3">
                    <label for="">Upload User Photo</label>
                    <input name="image" type="file" class="form-control" id="upload_student_photo">
                </div>
                <div class="my-3">
                    <input type="submit" class="btn btn-sm btn-primary w-100" value="Create">
                </div>
            </form>
        </div>
      </div>
    </div>
  </div>